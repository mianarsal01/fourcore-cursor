<style id="fourcore-cursor-style">
  * {
    cursor: inherit !important;
  }

  html, body, label {
    cursor: -webkit-image-set(url("{{ default_1x }}") 1x, url("{{ default_2x }}") 2x, url("{{ default_3x }}") 3x), auto !important;
    cursor: image-set(url("{{ default_1x }}") 1x, url("{{ default_2x }}") 2x, url("{{ default_3x }}") 3x), auto !important;
  }

  a:hover, textarea:hover, input:hover, select:hover, button:hover, summary:hover, [role='button']:hover {
    cursor: -webkit-image-set(url("{{ hover_1x }}") 1x, url("{{ hover_2x }}") 2x, url("{{ hover_3x }}") 3x), auto !important;
    cursor: image-set(url("{{ hover_1x }}") 1x, url("{{ hover_2x }}") 2x, url("{{ hover_3x }}") 3x), auto !important;
